<h1>There are : <%= @restaurants.count %> Restaurants</h1>
<div class="">
  <% @restaurants.each do |restaurant| %>
    <div class="card mb-4">
    <%= link_to restaurant.name, restaurant_path(restaurant), :class => "card-body text-decoration-none py-4 text-black" %>
    </div>
  <% end %>
</div>
<%= link_to "Add a new resttaurant", new_restaurant_path(@restaurant), :class => "btn btn-primary" %>
