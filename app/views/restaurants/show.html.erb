<h1><%= @restaurant.name %></h1>

<p><strong>Adress: </strong><%= @restaurant.address %></p>
<p><strong>Phone numbe: </strong><%= @restaurant.phone_number %></p>
<p><strong>Category: </strong><%= @restaurant.category %></p>
<p><strong>Reviews</strong></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %> | <%= review.rating %></li>
  <% end %>
</ul>
<h2>New Review</h2>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit "Submit review", class: "btn btn-primary" %>
<% end %>

<%= link_to "back to all restaurants", restaurants_path %>
